{
  "name": "use-color-thief",
  "version": "1.3.2",
  "description": "A react hook version of the package Color Thief, which generates color palettes from images",
  "type": "module",
  "main": "dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/csandman/use-color-thief.git"
  },
  "keywords": [
    "react",
    "hook",
    "hooks",
    "useColorThief",
    "color",
    "thief",
    "color thief",
    "palette",
    "generator"
  ],
  "author": "Chris Sandvik",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/csandman/use-color-thief/issues"
  },
  "homepage": "https://github.com/csandman/use-color-thief#readme",
  "devDependencies": {
    "@types/react": "^18.3.3",
    "eslint": "^8.57.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-react": "^7.34.3",
    "eslint-plugin-react-hooks": "^4.6.2",
    "prettier": "^3.3.2",
    "react": "^18.3.1",
    "tsup": "^8.1.0",
    "typescript": "^5.5.2"
  },
  "dependencies": {
    "colorthief": "^2.4.0"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  }
}
